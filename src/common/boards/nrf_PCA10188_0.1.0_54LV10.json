{
    "board": {
        "boardVersion": "PCA10188",
        "boardRevision": "0.1.0",
        "boardName": "nRF54LV10 DK (hw rev. 0.1.0)"
    },
    "pins": [
        {
            "type": "vcom",
            "id": "vcom0",
            "name": "VCOM0",
            "enable": {
                "pin": 42
            },
            "hwfc": {
                "pin": 20
            }
        },
        {
            "type": "vcom",
            "id": "vcom1",
            "name": "VCOM1",
            "enable": {
                "pin": 22
            },
            "hwfc": {
                "pin": 23
            }
        },
        {
            "type": "switch",
            "id": "ledcontrol",
            "title": "Power to LEDs",
            "label": "Disable to have LEDs unpowered (and kept off).",
            "tooltip": "Enabling this option provides LEDs from LED0 to LED3 with 3.3 V of power.",
            "enable": {
                "pin": 45
            }
        },
        {
            "type": "switch",
            "id": "swd-control",
            "title": "Software Debugger (SWD)",
            "label": "Disable to use an external debugger on the target chip.",
            "tooltip": "When enabled, the SWD is connected and the IMCU is acting as the debugger. When disabled, the SWD is disconnected and you can use an external debugger connected to the Debug In header.",
            "enable": {
                "pin": 6
            }
        },
        {
            "type": "switch",
            "id": "ls-en",
            "title": "Load Switch",
            "label": "Voltage level shifter",
            "tooltip": "Enables voltage level shifter between Board Controller and nRF54L MCU when active. When disabled, the voltage level shifter is disconnected.",
            "enable": {
                "pin": 18
            }
        },
        {
            "type": "switch",
            "id": "swo-control",
            "title": "SWO Control",
            "label": "Controls SWO signal",
            "tooltip": "Enables SWO signal connection to nRF54L SWO pin when enabled. When disabled, the SWO signal is disconnected.",
            "enable": {
                "pin": 9
            }
        }
    ],
    "pmicPorts": [
        {
            "type": "voltage",
            "port": 1,
            "portId": "vdd",
            "portLabel": "VDD (nPM VOUT1)",
            "portDescription": "Voltage on the VDD rail.",
            "mVmin": 1200,
            "mVmax": 1700
        }
    ],
    "defaults": {
        "pins": [
            {
                "pin": 42,
                "state": true
            },
            {
                "pin": 20,
                "state": true
            },
            {
                "pin": 22,
                "state": true
            },
            {
                "pin": 23,
                "state": true
            },
            {
                "pin": 45,
                "state": true
            },
            {
                "pin": 6,
                "state": true
            },
            {
                "pin": 18,
                "state": true
            },
            {
                "pin": 9,
                "state": false
            }
        ],
        "pmicPorts": [
            {
                "port": 1,
                "voltage": 1500
            }
        ]
